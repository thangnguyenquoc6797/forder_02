<% provide :title, t("admin.categories.index.title") %>
<body>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="btn-group">
      <div class="row">
        <div class="navbar-form navbar-right">
          <%= form_tag admin_categories_path do %>
            <%= label_tag :name %>
            <%= text_field_tag :name %>
            <%= submit_tag t("admin.users.index.search"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="table-wrapper-scroll-y">
      <table class="table table-responsive table-hover">
        <thead>
          <tr>
            <th></th>
            <th><%= t("admin.categories.index.name") %></th>
            <th><%= t("admin.categories.index.parent_category") %></th>
            <th><%= t("admin.users.index.action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @categories %>
        </tbody>
      </table>
    </div>
  </div>
</body>
