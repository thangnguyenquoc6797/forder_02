<% provide :title, t("admin.users.index.title") %>
<body>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="btn-group">
        <div class="row">
          <div class="navbar-form navbar-right">
            <%= form_tag(@users) do %>
              <%= label_tag :user %>
              <%= text_field_tag :name %>
              <%= submit_tag t("admin.users.index.search"), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t("admin.users.index.id") %></th>
            <th><%= t("admin.users.index.fullname") %></th>
            <th><%= t("admin.users.index.gender") %></th>
            <th><%= t("admin.users.index.birthday") %></th>
            <th><%= t("admin.users.index.phone") %></th>
            <th><%= t("admin.users.index.address") %></th>
            <th><%= t("admin.users.index.role") %></th>
            <th><%= t("admin.users.index.action") %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</body>
